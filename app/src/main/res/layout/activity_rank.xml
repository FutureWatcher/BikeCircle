<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLine"
    android:layout_marginBottom="1dp"
    tools:context="bike.circle.activities.RankActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="54dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="14dp"
            app:srcCompat="@drawable/start_action_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/rank_column"
            android:textSize="18sp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.Toolbar>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/portrait"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="18dp"
            android:src="@color/colorAccent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nikename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginBottom="4dp"
                android:text="NikeName"
                android:textColor="@color/colorWhite" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/rank_level_icon" />

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:text="等级：马路杀手"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="14dp"
                    app:srcCompat="@drawable/rank_point_icon" />

                <TextView
                    android:id="@+id/point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:text="积分：1100"
                    android:textColor="@color/colorWhite"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#f7f7f7"
        android:layout_height="52dp">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/rank_level"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline79"
            app:layout_constraintTop_toTopOf="@+id/guideline105"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/guideline105" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline79"
            app:layout_constraintGuide_percent="0.1"
            android:orientation="vertical" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline98"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline105"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintLeft_toLeftOf="@+id/guideline98"
            app:layout_constraintRight_toLeftOf="@+id/guideline98"
            app:layout_constraintTop_toTopOf="@+id/guideline105"
            app:srcCompat="@drawable/rank_nikename" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline105"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="horizontal" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline106"
            app:layout_constraintGuide_percent="0.9"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/rank_point"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline105"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="@+id/guideline105"
            app:layout_constraintRight_toLeftOf="@+id/guideline106"
            android:layout_marginRight="0dp" />
    </android.support.constraint.ConstraintLayout>

    <include layout="@layout/activity_rank_item"></include>
    <include layout="@layout/activity_rank_item"></include>
    <include layout="@layout/activity_rank_item"></include>
    <include layout="@layout/activity_rank_item"></include>
    <include layout="@layout/activity_rank_item"></include>
    <include layout="@layout/activity_rank_item"></include>
    <include layout="@layout/activity_rank_item"></include>
    <include layout="@layout/activity_rank_item"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
